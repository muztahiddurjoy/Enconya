<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:id="@+id/alertdialog_container"
    android:padding="30sp"
    android:gravity="center">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dialogback"
    android:padding="30sp">
    <TextView
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:text="Title Text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/alert_title"
        android:textColor="@color/white"
        android:fontFamily="@font/gilroyextrabold"
        android:textAllCaps="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:id="@+id/body_text_alerr_dialog"
        android:textColor="@color/white60"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="70sp"
        android:text="Okay"
        android:layout_marginTop="40sp"
        android:textColor="@color/white"
        android:id="@+id/btn_success_alert_dialog"
        android:background="@drawable/btnnew"/>
</LinearLayout>
/</LinearLayout>