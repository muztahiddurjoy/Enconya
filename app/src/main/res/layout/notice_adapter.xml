<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:padding="20sp"
    android:background="@drawable/dialogback"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_notice"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice_title"
        android:text="This is Title"
        android:layout_marginTop="8sp"
        android:textColor="@color/white"
        android:fontFamily="@font/gilroyextrabold"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice_decription"
        android:textColor="@color/white60"
        android:layout_marginTop="10sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            android:textColor="@color/white70"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:id="@+id/time_date_notice"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notice_open_btn"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_open_in_new_24"
            android:background="@color/white30"
            app:tint="@color/white" />
    </LinearLayout>
</LinearLayout>